---
interface Props {
  primaryText: string
  secondaryText: string
  description?: string
  href?: string
  imageUrl: string
  useAsRef?: boolean
  backgroundColor?: string
}

const { ...Props } = Astro.props
---

<div tabindex="0" id={Props.useAsRef ? 'work' : ''} class="card">
  <div class="card-content">
    <h4>{Props.primaryText}</h4>
    <h3>{Props.secondaryText}</h3>
    <p>{Props.description}</p>
    <a rel="prefetch" href={Props.href}> Read More</a>
  </div>
  <div style={{ backgroundColor: `${Props.backgroundColor}` }} class="card-image">
    <a rel="prefetch" href={Props.href}>
      <img src={Props.imageUrl} alt={Props.secondaryText} />
    </a>
  </div>
</div>

<style lang="scss">
  .card {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    gap: 1.25rem /* 20px */;

    @media (min-width: 1024px) {
      flex-direction: row;
    }
  }

  .card-content {
    order: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 0.5rem;
    letter-spacing: 0.05em;
    width: 100%;

    @media (min-width: 768px) {
      width: 50%;
    }

    @media (min-width: 1024px) {
      order: 1;
    }

    h4 {
      opacity: 0.5;
      font-size: 1.25rem /* 20px */;
      line-height: 1.75rem /* 28px */;
      font-family: 'SFBold', sans-serif;
    }

    h3 {
      font-size: 2.25rem /* 36px */;
      line-height: 2.5rem /* 40px */;
      font-family: 'SFBold', sans-serif;
    }

    p {
      font-family: 'AkkuratLight', sans-serif;
      font-size: 1.25rem /* 20px */;
      line-height: 1.75rem /* 28px */;
    }

    a {
      text-decoration: none;
      padding-top: 0.75rem /* 12px */;
      padding-bottom: 0.75rem /* 12px */;
      width: 100%;
      text-align: center;
      margin-top: 0.5rem;
      font-size: 1.125rem /* 18px */;
      line-height: 1.75rem /* 28px */;
      background: black;
      color: white;
      font-family: 'SFBold', sans-serif;
      border-radius: 0.375rem /* 6px */;
      cursor: pointer;

      @media only screen and (min-width: 640px) {
        padding-left: 2.5rem /* 40px */;
        padding-right: 2.5rem /* 40px */;
        width: fit-content;
      }
    }
  }

  .card-image {
    order: 1;
    width: 100%;
    height: 100%;
    height: 600px;
    width: 800px;
    overflow: hidden;
    position: relative;

    @media only screen and (max-width: 1024px) {
      width: 100%;
    }

    @media (min-width: 1024px) {
      order: 2;
      width: 100%;
    }

    @media (min-width: 1720px) {
      order: 2;
      width: 800px;
    }

    @media only screen and (max-width: 639px) {
      width: 100%;
      height: 250px;
    }

    a {
      cursor: pointer;
      text-decoration: none;
      position: absolute;
      width: 100%;
      height: 100%;
    }

    img {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      box-sizing: border-box;
      padding: 0;
      border: none;
      margin: auto;
      display: block;
      width: 0;
      height: 0;
      min-width: 100%;
      max-width: 100%;
      min-height: 100%;
      max-height: 100%;
      object-fit: contain;
    }
  }
</style>
